---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Horizon Impact - Contact">
  <div class="relative bg-indigo-600 text-white">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="relative container mx-auto px-4 py-32">
      <h1 class="text-4xl font-bold text-center mb-8">Contactez-nous</h1>
      <p class="text-xl text-center max-w-3xl mx-auto">
        Nous sommes à votre écoute pour répondre à toutes vos questions et vous accompagner dans vos projets.
      </p>
    </div>
  </div>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold mb-8">Nos Coordonnées</h2>
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="bg-indigo-100 p-3 rounded-lg mr-4">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-1">Adresse</h3>
                <p class="text-gray-600">Logbaba Forestière Pharmacie Rio, Douala, Cameroun</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-indigo-100 p-3 rounded-lg mr-4">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-1">Email</h3>
                <p class="text-gray-600">horizondimpact3.01@gmail.com</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-indigo-100 p-3 rounded-lg mr-4">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-1">Téléphone</h3>
                <p class="text-gray-600">+237 6 99 94 20 02</p>
              </div>
            </div>
          </div>
        </div>

        <div>
          <h2 class="text-3xl font-bold mb-8">Envoyez-nous un message</h2>
          <form id="contactForm" class="space-y-6">
            <div>
              <label for="nom" class="block text-sm font-medium text-gray-700 mb-1">Nom complet</label>
              <input
                type="text"
                id="nom"
                name="nom"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                required
              />
            </div>
            <div>
              <label for="sujet" class="block text-sm font-medium text-gray-700 mb-1">Sujet</label>
              <input
                type="text"
                id="sujet"
                name="sujet"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                required
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                required
              ></textarea>
            </div>
            <div id="formStatus" class="hidden"></div>
            <button
              type="submit"
              class="w-full bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-500 transition-colors"
            >
              Envoyer le message
            </button>
          </form>

          <script>
            const form = document.getElementById('contactForm');
            const formStatus = document.getElementById('formStatus');

            form?.addEventListener('submit', async (e) => {
              e.preventDefault();
              
              const formData = new FormData(e.target as HTMLFormElement);
              const data = {
                nom: formData.get('nom'),
                email: formData.get('email'),
                sujet: formData.get('sujet'),
                message: formData.get('message')
              };

              try {
                const response = await fetch('/api/send-email', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json'
                  },
                  body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                  formStatus.textContent = 'Message envoyé avec succès !';
                  formStatus.className = 'p-4 mb-4 text-green-700 bg-green-100 rounded-lg';
                  (e.target as HTMLFormElement).reset();
                } else {
                  throw new Error(result.message);
                }
              } catch (error) {
                formStatus.textContent = 'Erreur lors de l\'envoi du message. Veuillez réessayer.';
                formStatus.className = 'p-4 mb-4 text-red-700 bg-red-100 rounded-lg';
              }

              formStatus.classList.remove('hidden');
            });
          </script>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-100">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Notre Localisation</h2>
      <div class="aspect-w-16 aspect-h-9">
        <iframe
          src="https://www.google.com/maps?q=3Q2C%2B52J%2C%20Douala%2C%20Cameroun&output=embed"
          width="100%"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          class="rounded-lg shadow-lg"
        ></iframe>
      </div>
    </div>
  </section>
</Layout>

<style>
.page-section {
  background: #f5f5f5;
  padding: 4rem 0;
}
.titre-section {
  color: #1a237e;
  font-size: 2.5rem;
  font-weight: 800;
  text-align: center;
  margin-bottom: 2rem;
  position: relative;
}
.titre-section::after {
  content: '';
  display: block;
  width: 80px;
  height: 4px;
  background: linear-gradient(90deg, #ffb300 0%, #3949ab 100%);
  margin: 1rem auto 0 auto;
  border-radius: 2px;
}
.form-contact input,
.form-contact textarea {
  border-radius: 1rem;
  border: 1px solid #e0e7ef;
  padding: 0.8rem 1.2rem;
  font-size: 1rem;
  transition: border 0.2s, box-shadow 0.2s;
}
.form-contact input:focus,
.form-contact textarea:focus {
  border: 1.5px solid #3949ab;
  box-shadow: 0 0 0 2px #ffb30044;
  outline: none;
}
.btn-premium {
  display: inline-block;
  background: linear-gradient(90deg, #1a237e 0%, #3949ab 100%);
  color: #fff;
  font-weight: 700;
  border-radius: 2rem;
  padding: 1rem 2.5rem;
  box-shadow: 0 4px 24px #1a237e33;
  transition: background 0.2s, transform 0.2s, box-shadow 0.2s;
  margin-top: 1.5rem;
}
.btn-premium:hover {
  background: linear-gradient(90deg, #ffb300 0%, #1a237e 100%);
  color: #1a237e;
  transform: translateY(-3px) scale(1.04);
  box-shadow: 0 8px 32px #ffb30055;
}
.map-premium {
  border-radius: 1.5rem;
  box-shadow: 0 4px 32px #1a237e22;
  border: 1px solid #e0e7ef;
  overflow: hidden;
}
@media (max-width: 600px) {
  .titre-section { font-size: 1.5rem; }
  .btn-premium { padding: 0.7rem 1.2rem; font-size: 1rem; }
}
</style> 