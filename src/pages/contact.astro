---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Horizon D'Impact 3.0 - Contact">
	<section data-animate style="background: linear-gradient(120deg, #1a237e 60%, #3949ab 100%); color: #fff; padding: 3.5rem 1rem 2.5rem 1rem; text-align: center;">
		<h1 style="font-size: 2.3rem; font-weight: 800; margin-bottom: 1.2rem; letter-spacing: 0.5px;">Contactez-nous</h1>
		<p style="font-size: 1.2rem; max-width: 600px; margin: 0 auto 2rem auto;">Que vous soyez une PME ou un jeune talent, nous sommes là pour vous accompagner.</p>
	</section>

	<section data-animate style="max-width: 1200px; margin: 0 auto; padding: 2.5rem 1rem;">
		<div style="display: flex; flex-wrap: wrap; gap: 2rem; justify-content: center;">
			<!-- Formulaire PME -->
			<div style="background: #fff; border-radius: 1.5rem; box-shadow: 0 2px 12px #1a237e11; flex: 1 1 500px; min-width: 300px; max-width: 600px; padding: 2rem;">
				<h2 style="color: #1a237e; font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem; text-align: center;">Je suis une PME</h2>
				<form style="display: flex; flex-direction: column; gap: 1.2rem;">
					<div>
						<label for="pme-nom" style="display: block; color: #1a237e; font-weight: 600; margin-bottom: 0.5rem;">Nom de l'entreprise *</label>
						<input type="text" id="pme-nom" name="pme-nom" required style="width: 100%; padding: 0.8rem; border: 2px solid #e0e0e0; border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.2s;" />
					</div>
					<div>
						<label for="pme-contact" style="display: block; color: #1a237e; font-weight: 600; margin-bottom: 0.5rem;">Nom du contact *</label>
						<input type="text" id="pme-contact" name="pme-contact" required style="width: 100%; padding: 0.8rem; border: 2px solid #e0e0e0; border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.2s;" />
					</div>
					<div>
						<label for="pme-email" style="display: block; color: #1a237e; font-weight: 600; margin-bottom: 0.5rem;">Email *</label>
						<input type="email" id="pme-email" name="pme-email" required style="width: 100%; padding: 0.8rem; border: 2px solid #e0e0e0; border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.2s;" />
					</div>
					<div>
						<label for="pme-tel" style="display: block; color: #1a237e; font-weight: 600; margin-bottom: 0.5rem;">Téléphone *</label>
						<input type="tel" id="pme-tel" name="pme-tel" required style="width: 100%; padding: 0.8rem; border: 2px solid #e0e0e0; border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.2s;" />
					</div>
					<div>
						<label for="pme-message" style="display: block; color: #1a237e; font-weight: 600; margin-bottom: 0.5rem;">Votre message *</label>
						<textarea id="pme-message" name="pme-message" required rows="4" style="width: 100%; padding: 0.8rem; border: 2px solid #e0e0e0; border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.2s; resize: vertical;"></textarea>
					</div>
					<button type="submit" style="background: #1a237e; color: #fff; font-weight: 600; padding: 1rem; border-radius: 0.5rem; font-size: 1rem; cursor: pointer; transition: background 0.2s;">Envoyer</button>
				</form>
			</div>

			<!-- Formulaire Jeune Talent -->
			<div style="background: #fff; border-radius: 1.5rem; box-shadow: 0 2px 12px #1a237e11; flex: 1 1 500px; min-width: 300px; max-width: 600px; padding: 2rem;">
				<h2 style="color: #1a237e; font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem; text-align: center;">Je suis un jeune talent</h2>
				<form style="display: flex; flex-direction: column; gap: 1.2rem;">
					<div>
						<label for="talent-nom" style="display: block; color: #1a237e; font-weight: 600; margin-bottom: 0.5rem;">Nom complet *</label>
						<input type="text" id="talent-nom" name="talent-nom" required style="width: 100%; padding: 0.8rem; border: 2px solid #e0e0e0; border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.2s;" />
					</div>
					<div>
						<label for="talent-email" style="display: block; color: #1a237e; font-weight: 600; margin-bottom: 0.5rem;">Email *</label>
						<input type="email" id="talent-email" name="talent-email" required style="width: 100%; padding: 0.8rem; border: 2px solid #e0e0e0; border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.2s;" />
					</div>
					<div>
						<label for="talent-tel" style="display: block; color: #1a237e; font-weight: 600; margin-bottom: 0.5rem;">Téléphone *</label>
						<input type="tel" id="talent-tel" name="talent-tel" required style="width: 100%; padding: 0.8rem; border: 2px solid #e0e0e0; border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.2s;" />
					</div>
					<div>
						<label for="talent-formation" style="display: block; color: #1a237e; font-weight: 600; margin-bottom: 0.5rem;">Formation actuelle *</label>
						<input type="text" id="talent-formation" name="talent-formation" required style="width: 100%; padding: 0.8rem; border: 2px solid #e0e0e0; border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.2s;" />
					</div>
					<div>
						<label for="talent-message" style="display: block; color: #1a237e; font-weight: 600; margin-bottom: 0.5rem;">Votre message *</label>
						<textarea id="talent-message" name="talent-message" required rows="4" style="width: 100%; padding: 0.8rem; border: 2px solid #e0e0e0; border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.2s; resize: vertical;"></textarea>
					</div>
					<button type="submit" style="background: #1a237e; color: #fff; font-weight: 600; padding: 1rem; border-radius: 0.5rem; font-size: 1rem; cursor: pointer; transition: background 0.2s;">Envoyer</button>
				</form>
			</div>
		</div>
	</section>
</Layout>

<style>
input:focus, textarea:focus {
	outline: none;
	border-color: #3949ab !important;
}
button:hover {
	background: #3949ab !important;
}
@media (max-width: 768px) {
	section {
		padding: 1.5rem 1rem !important;
	}
	form {
		gap: 1rem !important;
	}
	input, textarea, button {
		font-size: 16px !important;
	}
}
</style> 