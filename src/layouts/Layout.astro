<style>
	html, body {
		max-width: 100vw;
		overflow-x: hidden;
		box-sizing: border-box;
		font-family: 'Inter', 'Roboto', Arial, sans-serif;
		background: #f5f5f5;
	}
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	header {
		position: sticky;
		top: 0;
		z-index: 50;
		background: #fff;
		border-bottom: 1.5px solid #e0e7ef;
		box-shadow: 0 2px 12px #1a237e11;
	}
	.navbar {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0.7rem 1.2rem;
	}
	.logo-title {
		display: flex;
		align-items: center;
		gap: 0.7rem;
		font-size: 1.5rem;
		font-weight: 800;
		color: #1a237e;
		letter-spacing: 0.5px;
	}
	.logo-title img {
		height: 2.5rem;
		width: auto;
		border-radius: 0.7rem;
		background: #f5f5f5;
		box-shadow: 0 2px 8px #1a237e22;
		padding: 0.2rem;
	}
	.nav-links {
		display: flex;
		gap: 2rem;
	}
	.nav-link {
		color: #1a237e;
		font-weight: 600;
		text-decoration: none;
		transition: color 0.2s;
		font-size: 1.1rem;
	}
	.nav-link:hover {
		color: #3949ab;
	}
	.menu-toggle {
		display: none;
		background: none;
		border: none;
		font-size: 2rem;
		color: #1a237e;
		cursor: pointer;
	}
	@media (max-width: 900px) {
		.navbar {
			padding: 0.7rem 0.7rem;
		}
		.nav-links {
			gap: 1.2rem;
		}
		.logo-title {
			font-size: 1.1rem;
		}
	}
	@media (max-width: 700px) {
		.navbar {
			flex-direction: row;
			padding: 0.7rem 0.5rem;
		}
		.nav-links {
			display: none;
			position: absolute;
			top: 60px;
			left: 0;
			width: 100vw;
			background: #fff;
			flex-direction: column;
			gap: 0.7rem;
			box-shadow: 0 8px 32px #1a237e22;
			padding: 1.2rem 0;
			z-index: 100;
		}
		.nav-links.open {
			display: flex;
		}
		.menu-toggle {
			display: block;
		}
	}
	main {
		min-height: 70vh;
		width: 100%;
		background: #f5f5f5;
	}
	footer {
		background: #1a237e;
		color: #fff;
		padding: 2.5rem 1rem 1.2rem 1rem;
		border-top-left-radius: 2.5rem;
		border-top-right-radius: 2.5rem;
		box-shadow: 0 -2px 16px #1a237e22;
		margin-top: 3rem;
	}
	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		justify-content: space-between;
		align-items: flex-start;
	}
	.footer-block {
		flex: 1 1 200px;
		min-width: 180px;
		margin-bottom: 1.2rem;
	}
	.footer-block h3 {
		font-size: 1.1rem;
		font-weight: 700;
		margin-bottom: 0.7rem;
		color: #ffb300;
	}
	.footer-block p, .footer-block a {
		color: #e0e7ef;
		font-size: 1rem;
		margin-bottom: 0.5rem;
		text-decoration: none;
	}
	.footer-block a:hover {
		color: #ffb300;
	}
	.footer-socials {
		display: flex;
		gap: 1.2rem;
		margin-top: 0.7rem;
	}
	.footer-socials a {
		color: #fff;
		font-size: 1.5rem;
		transition: color 0.2s;
	}
	.footer-socials a:hover {
		color: #ffb300;
	}
	.footer-bottom {
		text-align: center;
		color: #e0e7ef;
		font-size: 0.95rem;
		margin-top: 2rem;
	}
	@media (max-width: 900px) {
		.footer-content {
			flex-direction: column;
			gap: 1.5rem;
			align-items: center;
		}
		.footer-block {
			min-width: 0;
			width: 100%;
			text-align: center;
		}
	}
	.fade-in-up {
		opacity: 0;
		transform: translateY(40px);
		transition: opacity 0.8s cubic-bezier(.4,0,.2,1), transform 0.8s cubic-bezier(.4,0,.2,1);
	}
	.fade-in-up.visible {
		opacity: 1;
		transform: none;
	}
	.menu-toggle.animate {
		transition: transform 0.3s cubic-bezier(.4,0,.2,1);
		transform: rotate(90deg);
	}
</style>

<script>
	const toggle = document.getElementById('menu-toggle');
	const links = document.getElementById('nav-links');
	toggle.addEventListener('click', () => {
		links.classList.toggle('open');
		toggle.classList.toggle('animate');
	});

	// Animation d'apparition douce des sections
	function revealOnScroll() {
		const elements = document.querySelectorAll('main section, main div[data-animate]');
		const windowHeight = window.innerHeight;
		elements.forEach(el => {
			const rect = el.getBoundingClientRect();
			if (rect.top < windowHeight - 60) {
				el.classList.add('visible');
			}
		});
	}
	document.addEventListener('DOMContentLoaded', () => {
		document.querySelectorAll('main section, main div[data-animate]').forEach(el => {
			el.classList.add('fade-in-up');
		});
		revealOnScroll();
		window.addEventListener('scroll', revealOnScroll);
	});
</script>
