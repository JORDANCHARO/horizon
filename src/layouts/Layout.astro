---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-gray-50">
		<header class="bg-white text-[#1a237e] border-b border-[#3949ab] shadow-lg">
			<nav class="container mx-auto px-4 py-4">
				<div class="flex justify-between items-center">
					<a href="/" class="flex items-center space-x-2 text-2xl font-extrabold text-[#1a237e] tracking-tight">
						<img src="/logos/logo.png" alt="Logo Horizon D'Impact 3.0" class="h-12 w-auto rounded-xl shadow-md bg-[#f5f5f5] p-1" />
						<span>Horizon D'Impact 3.0</span>
					</a>
					<div class="hidden md:flex space-x-6">
						<a href="/" class="hover:text-[#ffb300] text-[#1a237e] font-semibold transition-colors">Accueil</a>
						<a href="/services" class="hover:text-[#ffb300] text-[#1a237e] font-semibold transition-colors">Nos Services</a>
						<!-- <a href="/partenaires" class="hover:text-indigo-200">Nos Partenaires</a> -->
						<a href="/contact" class="hover:text-[#ffb300] text-[#1a237e] font-semibold transition-colors">Contact</a>
					</div>
					<button class="md:hidden">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
						</svg>
					</button>
				</div>
			</nav>
		</header>

		<main>
			<slot />
		</main>

		<footer class="bg-[#1a237e] text-white mt-12 rounded-t-3xl shadow-2xl">
			<div class="container mx-auto px-4 py-8">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-xl font-bold mb-4">Horizon Impact</h3>
						<p class="text-gray-300">Accompagnement des PME dans la formation et l'intégration de jeunes talents.</p>
					</div>
					<div>
						<h3 class="text-xl font-bold mb-4">Contact</h3>
						<p class="text-gray-300">Email: horizon.dimpact.3.0@gmail.com</p>
						<p class="text-gray-300">Tél: +237 6 99 94 20 02</p>
					</div>
					<div>
						<h3 class="text-xl font-bold mb-4">Suivez-nous</h3>
						<div class="flex space-x-4">
							<a href="#" class="text-gray-300 hover:text-white">LinkedIn</a>
							<a href="#" class="text-gray-300 hover:text-white">Twitter</a>
							<a
								href="https://vm.tiktok.com/ZMBExQWH6/"
								class="text-white hover:text-[#ffb300] transition-colors"
								aria-label="TikTok"
								target="_blank"
								rel="noopener"
							>
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
									<path d="M12.75 2h2.25a.75.75 0 01.75.75v2.25a3.75 3.75 0 003.75 3.75h.75a.75.75 0 01.75.75v2.25a.75.75 0 01-.75.75h-1.5v5.25a6.75 6.75 0 11-6.75-6.75.75.75 0 01.75.75v2.25a.75.75 0 01-.75.75 2.25 2.25 0 102.25 2.25V2.75A.75.75 0 0112.75 2z" />
								</svg>
							</a>
						</div>
					</div>
				</div>
				<div class="border-t border-gray-200 mt-12 pt-8">
					<div class="container mx-auto px-4">
						<div class="grid md:grid-cols-2 gap-8">
							<div>
								<h3 class="text-lg font-semibold mb-4">Restez Informé</h3>
								<p class="text-gray-600 mb-4">
									Inscrivez-vous à notre newsletter pour recevoir nos actualités et opportunités.
								</p>
								<form class="flex gap-2">
									<input
										type="email"
										placeholder="Votre email"
										class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
										required
									/>
									<button
										type="submit"
										class="bg-indigo-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-indigo-500 transition-colors"
									>
										S'inscrire
									</button>
								</form>
							</div>
							<div>
								<h3 class="text-lg font-semibold mb-4">Suivez-nous</h3>
								<div class="flex space-x-4">
									<a
										href="https://www.facebook.com/Horizondimpact"
										class="text-white hover:text-[#ffb300] transition-colors"
										target="_blank"
										rel="noopener"
										aria-label="Facebook"
									>
										<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
											<path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" />
										</svg>
									</a>
									<a
										href="#"
										class="text-gray-600 hover:text-indigo-600 transition-colors"
										aria-label="Twitter"
									>
										<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
											<path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z" />
										</svg>
									</a>
									<a
										href="#"
										class="text-gray-600 hover:text-indigo-600 transition-colors"
										aria-label="LinkedIn"
									>
										<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
											<path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z" />
											<circle cx="4" cy="4" r="2" />
										</svg>
									</a>
								</div>
							</div>
							<div>
								<h3 class="text-lg font-semibold mb-1">Email</h3>
								<p class="text-gray-600">horizondimpact3.01@gmail.com</p>
							</div>
						</div>
					</div>
				</div>
				<div class="bg-gray-100 mt-8 py-6">
					<div class="container mx-auto px-4">
						<p class="text-center text-gray-600">
							© {new Date().getFullYear()} Horizon Impact. Tous droits réservés.
						</p>
					</div>
				</div>
			</div>
		</footer>
	</body>
</html>

<style>
	html, body {
		max-width: 100vw;
		overflow-x: hidden;
		box-sizing: border-box;
	}
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	body {
		font-family: 'Inter', 'Roboto', Arial, sans-serif;
		background: #f5f5f5;
	}
	header, footer, main, section, .container {
		width: 100%;
		box-sizing: border-box;
	}
	img, svg {
		max-width: 100%;
		height: auto;
		display: block;
	}
	@media (max-width: 768px) {
		header nav, .container, section, main, footer {
			padding-left: 0.5rem !important;
			padding-right: 0.5rem !important;
		}
		.flex, .grid {
			flex-direction: column !important;
			align-items: center !important;
			justify-content: center !important;
			gap: 1rem !important;
		}
		h1, h2, h3, h4, h5, h6, .titre-bluffant, .titre-section {
			text-align: center !important;
			font-size: 1.2rem !important;
			margin-bottom: 0.8rem !important;
		}
		p, .sous-titre-bluffant {
			text-align: center !important;
			font-size: 1rem !important;
			margin-bottom: 0.7rem !important;
		}
		.btn-bluffant, .btn-premium, button, input[type=submit] {
			width: 100% !important;
			font-size: 1rem !important;
			padding: 0.8rem 1.2rem !important;
			margin: 0.3rem 0 !important;
			border-radius: 1.2rem !important;
		}
		.card-service, .bg-white.p-6.rounded-lg.shadow-md, .bg-white.p-8.rounded-lg.shadow-md {
			padding: 1rem !important;
			margin-bottom: 1.2rem !important;
			border-radius: 1.2rem !important;
			text-align: center !important;
		}
		.flex.space-x-4, .flex.space-x-6 {
			flex-direction: row !important;
			justify-content: center !important;
			gap: 1rem !important;
		}
		footer .grid {
			grid-template-columns: 1fr !important;
			gap: 1.5rem !important;
		}
		.h-12.w-auto, .h-10.w-auto {
			height: 2.2rem !important;
		}
	}
	@media (max-width: 1024px) {
		header nav {
			padding: 0.7rem 1rem;
		}
		.flex.items-center.space-x-2.text-2xl {
			font-size: 1.3rem;
		}
		.h-12.w-auto {
			height: 2.5rem;
		}
	}
	@media (min-width: 1280px) {
		.container {
			max-width: 1200px;
			margin-left: auto;
			margin-right: auto;
		}
		header nav {
			padding-left: 2.5rem;
			padding-right: 2.5rem;
		}
	}
</style>
